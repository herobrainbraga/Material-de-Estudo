Algoritmo "Calculo Baby"
Var
Acao, Inp1, Inp2 : inteiro



Inicio
repita
      escreval("Digite o primeiro valor")
      Leia(Inp1)
      Escreval("Digite o segundo valor")
      leia(Inp2)
      Inp1 <- Inp1 + Inp2
      escreval(Inp1)
      Inp1 <- 0
      escreval("Você quer realizar outra operação")
      escreval("1. sim")
      escreval("2. nao")
      leia(Acao)
ate Acao = 2

Fimalgoritmo